# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Trending' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  
  def available_pods
      pod 'lottie-ios'
      pod 'Kingfisher'
      pod 'SVGKit'
      pod 'SkeletonView'
  end


  # Pods for Trending
    available_pods
  target 'TrendingTests' do
    inherit! :search_paths
    # Pods for testing
    available_pods
  end

  target 'TrendingUITests' do
    # Pods for testing
    available_pods
  end

end
